external function LongInt DateTimeDiff(date,time,date,time);globalupdating procedure ClientScheduleOprtns()begin  record IVCashVc IVCashr;  date curdate;  time curtime;  Boolean TrHs,testf;  LongInt maxMinutesForHiding;  Integer emptySalesManCnt;      curdate = CurrentDate;    curtime = CurrentTime;    maxMinutesForHiding = 120; //minutes        IVCashr.TransDate = curdate;    TrHs = true;    while (LoopBackKey("TransDate",IVCashr,1,TrHs)) begin      testf = true;      if (Blank(IVCashr.SalesMan)) then begin        testf = false;         emptySalesManCnt = emptySalesManCnt + 1;       end;      if (emptySalesManCnt==100) then begin TrHs = false; testf = false; end;      if (DateTimeDiff(curdate,curtime,IVCashr.TransDate,IVCashr.TransTime)<maxMinutesForHiding) then begin testf = false; end;      if (IVCashr.OKFlag==0) then begin        if (MatRowCnt(IVCashr)>0) then begin          testf = false;         end;      end;      if (testf) then begin        IVCashr.InvComment = IVCashr.InvComment & " SalesMan:" & IVCashr.SalesMan;        IVCashr.SalesMan = "";        RECORDSTORE(IVCashr,true);      end;    end;  //LogText(0,"ClientScheduleOperations:" & CurrentTime);     return;end;